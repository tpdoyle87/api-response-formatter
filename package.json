{
  "name": "api-response-formatter",
  "version": "1.0.0",
  "description": "Chrome extension for formatting API responses",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && node scripts/generate-icons.js",
    "build:icons": "node scripts/generate-icons.js",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "format": "prettier --write src/**/*.{js,ts,jsx,tsx,css,html}"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-xml": "^6.0.2",
    "@codemirror/lang-yaml": "^6.0.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@uiw/react-codemirror": "^4.21.21",
    "canvas": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
